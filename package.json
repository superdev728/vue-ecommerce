    "stripe": "^5.4.0",
    "vue-stripe-checkout": "0.0.4"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.1",
    "cross-env": "^5.0.1",
    "eslint": "^4.15.0",
    "eslint-loader": "^1.7.1",
    "eslint-plugin-vue": "^4.0.0",
    "node-sass": "^4.7.2",
    "nodemon": "^1.11.0",
    "sass-loader": "^6.0.6"
